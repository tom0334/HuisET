<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tobo.huiset">

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_huiset"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.tobo.huiset.gui.activities.SettingsActivity"></activity>
        <activity android:name="com.tobo.huiset.gui.activities.AchievementsActivity"></activity>
        <activity android:name="com.tobo.huiset.gui.activities.StatsActivity" android:theme="@style/AppThemeNoActionBar"></activity>
        <activity android:name="com.tobo.huiset.gui.activities.EditProfileActivity"></activity>
        <activity android:name="com.tobo.huiset.gui.activities.EditProductActivity"></activity>
        <activity android:name=".gui.activities.TransferMoneyActivity"></activity>
        <activity android:name="com.tobo.huiset.gui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>